<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/today"
    style="@style/main_layout"
    android:background="@color/sunshine_background"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:id="@+id/day_mainActivity"
        style="@style/textView"
        android:text="@string/day"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <LinearLayout
        style="@style/main_layout"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/maxGrade_mainActivity"
                style="@style/textView"
                android:text="@string/maxGrade"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/minGrade_mainActivity"
                style="@style/textView"
                android:text="@string/minGrade"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/description_mainActivity"
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:text="@string/description"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/CloudImage_mainActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:contentDescription="@string/weather_description"
                android:src="@drawable/art_light_clouds" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>